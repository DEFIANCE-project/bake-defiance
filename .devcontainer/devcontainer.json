// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
  "name": "DEFIANCE",
  "build": {
    "context": "..",
    "dockerfile": "./Dockerfile"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/code/,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/training_results,target=/root/ray_results,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/code/source/ns-3.40",
  "containerEnv": {
    "RAY_DEDUP_LOGS": "0"
  },
  "initializeCommand": "mkdir -p source/ns-3.40",
  "postStartCommand": "cd /code && make bootstrap",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "ms-python.python",
        "eamodio.gitlens",
        "charliermarsh.ruff",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools",
        "ms-vscode.cpptools",
        "llvm-vs-code-extensions.vscode-clangd",
        "tamasfe.even-better-toml"
      ],
      "settings": {
        "extensions.verifySignature": false,
        "cmake.buildDirectory": "${workspaceFolder}/cmake-cache",
        "cmake.configureSettings": {
          "-DPython3_INCLUDE_DIRS": "/usr/include/python3.10",
          "-DPython3_EXECUTABLE": "/code/source/ns-3.40/contrib/DEFIANCE/.venv/bin/python3",
          "-DNS3_ASSERT": "ON",
          "-DNS3_LOG": "ON",
          "-DNS3_WARNINGS_AS_ERRORS": "ON",
          "-DNS3_NATIVE_OPTIMIZATIONS": "OFF",
          "-DNS3_EXAMPLES": "ON",
          "-DNS3_PYTHON_BINDINGS": "ON",
          "-DNS3_TESTS": "ON"
        },
        "cmake.configureOnOpen": true,
        "clangd.arguments": [
          "--compile-commands-dir=cmake-cache"
        ]
      }
    }
  }
}
