// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
  "name": "DEFIANCE",
  "build": {
    "context": "..",
    "dockerfile": "./Dockerfile"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/code/,type=bind,consistency=cached"
  ],
  "workspaceFolder": "/code/source/ns-3.40",
  "containerEnv": {
    "RAY_DEDUP_LOGS": "0"
  },
  "postStartCommand": "cd /code && make bootstrap",
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers",
        "streetsidesoftware.code-spell-checker",
        "ms-python.python",
        "eamodio.gitlens",
        "charliermarsh.ruff",
        "ms-vscode.cmake-tools",
        "ms-vscode.makefile-tools",
        "ms-vscode.cpptools",
        "llvm-vs-code-extensions.vscode-clangd"
      ],
      "settings": {
        "extensions.verifySignature": false,
        "cmake.buildDirectory": "${workspaceFolder}/cmake-cache",
        "cmake.configureArgs": [
          "-DNS3_EXAMPLES=ON",
          "-DNS3_PYTHON_BINDINGS=ON",
          "-DNS3_TESTS=ON"
        ],
        "git.repositoryScanMaxDepth": -1,
        "clangd.arguments": [
          "--compile-commands-dir=cmake-cache"
        ]
      }
    }
  }
}
